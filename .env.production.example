# Production Environment Configuration
# Copy this to .env.production and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=beat_generator
MYSQL_USER=beatgen
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_PORT=3306

DATABASE_URL=mysql://beatgen:your_mysql_password_here@localhost:3306/beat_generator

# =============================================================================
# AI API KEYS
# =============================================================================

# Google Gemini API (for concept generation)
# Get key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSyB3_t5Nj6vOfPDwXlliO7hwyuyy-SL34yE

# OpenAI API (for prompt optimization and tag generation)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Suno API Keys (comma-separated for multiple keys)
# Get keys from: https://suno.ai
SUNO_API_KEYS=key1,key2,key3,key4

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=production
APP_PORT=3000

# =============================================================================
# API RATE LIMITING
# =============================================================================
# Window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Max requests per window per IP (default: 100)
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SCHEDULER
# =============================================================================
# Enable/disable automatic beat generation
SCHEDULER_ENABLED=true

# Cron schedule (default: every 15 minutes)
# Format: */15 * * * * (minute hour day month weekday)
SCHEDULER_INTERVAL=*/15 * * * *

# =============================================================================
# ADMINER (Database UI)
# =============================================================================
ADMINER_PORT=8080

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=7
